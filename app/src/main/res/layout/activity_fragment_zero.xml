<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp">
	     <TextView
	        android:id="@+id/Text_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="查询"
            android:textColor="#333333"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="录入客户信息"
            android:textColor="#333333"
            android:textSize="16sp" />
	</RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="客户姓名"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_food_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_food"
                android:background="@null"
                android:hint="请填写名字"
                android:maxLength="5"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="性别        "
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_articles_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_articles"
                android:background="@null"
                android:hint="请填写性别"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="电话       "
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_traffic_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_traffic"
                android:background="@null"
                android:hint="请填写电话"
                android:inputType="numberDecimal"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="QQ          "
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_travel_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_travel"
                android:background="@null"
                android:hint="请填写QQ"
                android:inputType="numberDecimal"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="公司名称"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_clothes_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_clothes"
                android:background="@null"
                android:hint="请填写名称"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="省市        "
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_doctor_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_doctor"
                android:background="@null"
                android:hint="请填写省市"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_laiwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="详细地址"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_laiwang_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_laiwang"
                android:background="@null"
                android:hint="请填写详细地址"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="客户来源"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_baby_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_baby"
                android:background="@null"
                android:hint="请填写来源"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="其它支出"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_other_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_other"
                android:background="@null"
                android:hint="请填写其它"
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="#d0d0d0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/family_bill_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="备注说明 ："
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/family_bill_remark_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/family_bill_remark"
                android:background="@null"
                android:hint=""
                android:textColor="#9f9f9f"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d0d0d0" />

        <Button
            android:id="@+id/family_bill_save"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_submit"
            android:padding="0dp"
            android:text="确定保存"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>