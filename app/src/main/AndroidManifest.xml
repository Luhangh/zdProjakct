<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zdsoft.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:name="com.zdsoft.app.ZDSoftApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
          android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name="com.zdsoft.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity 
             android:name="com.zdsoft.activity.MainActivity" 
             android:windowSoftInputMode="adjustUnspecified|stateHidden"
             android:screenOrientation="portrait"/>
         
           <activity 
             android:name="com.zdsoft.activity.AddAccountActivity" 
             android:windowSoftInputMode="adjustUnspecified|stateHidden"
             android:screenOrientation="portrait"/>
           
             <activity 
             android:name="com.zdsoft.activity.TransferAccountsActivity" 
             android:windowSoftInputMode="adjustUnspecified|stateHidden"
             android:screenOrientation="portrait"/>
             
             <activity 
             android:name="com.zdsoft.activity.AddNotesActivity" 
             android:windowSoftInputMode="adjustUnspecified|stateHidden"
             android:screenOrientation="portrait"/>
             
              <activity
            android:name="com.zdsoft.activity.SelectAccountActivty"
            android:theme="@style/MyDialogStyleBottom">
        </activity>
        
                <activity
            android:name="com.zdsoft.activity.NotesInfoActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
             android:screenOrientation="portrait">
        </activity>
             
              
              
         
    </application>

</manifest>
