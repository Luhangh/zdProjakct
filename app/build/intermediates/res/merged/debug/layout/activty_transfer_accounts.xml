<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F6F6F6">
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/new_top_bg" >	    
       <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/back_btn_bg"
	        android:id="@+id/back_btn"/>
	    <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"
           android:textSize="17sp"
	       android:textColor="@color/white"
	        android:id="@+id/top_text"/>    
	   </RelativeLayout>
	   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="5"
	        android:orientation="vertical">
	       <RelativeLayout 
	           android:id="@+id/relative_out_btn"
               android:layout_marginTop="20dp"
               android:layout_width="fill_parent"
               android:layout_height="70dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/xianjin_shape">            
                <TextView 
                    android:id="@+id/text_out"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="10dp"
                   android:text="转出账户 "
                   android:textColor="@color/white"
                   android:textSize="20.0sp"/>
           </RelativeLayout>
	        
	        <RelativeLayout 
	             android:id="@+id/relative_into_btn"
               android:layout_marginTop="20dp"
               android:layout_width="fill_parent"
               android:layout_height="70dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/zhuangz_white_shape">            
                <TextView 
                    android:id="@+id/text_into"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="10dp"
                   android:text="转入账户 "
                   android:textColor="@color/grey"
                   android:textSize="20.0sp"/>
           </RelativeLayout>
	        
	    </LinearLayout>
	    
	<RelativeLayout  
       android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" 
      android:background="@color/white">
      <View 
           android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:layout_alignParentTop="true"
          android:background="@color/btom_line"/>
      <TextView 
          android:id="@+id/jine_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="金额"
          android:textSize="23.0sp"
          android:layout_centerVertical="true"
          android:textColor="@color/grey"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="10dp"/>
      
          <TextView 
            android:id="@+id/result_num"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/jine_text"
           android:layout_alignParentRight="true"
           android:textSize="25.0sp"
           android:textColor="@color/grey"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:gravity="right"/>
       
    </RelativeLayout>
	    
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" 
         android:layout_weight="3">
        <LinearLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical" 
          android:layout_weight="1" >
          <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_one"
              android:background="@drawable/button_shape_a"
              android:text="1"/>
           <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_four"
              android:background="@drawable/button_shape_a"
               android:text="4"/>          
               <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_seven"
              android:background="@drawable/button_shape_a"
               android:text="7"/>   
             <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_ac"
              android:background="@drawable/button_shape_a"
               android:text="AC"/>   
        </LinearLayout>
        <LinearLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical" 
          android:layout_weight="1" >
          <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_two"
              android:background="@drawable/button_shape_a"
               android:text="2"/>         
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_five"
              android:background="@drawable/button_shape_a"
               android:text="5"/>              
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_eight"
              android:background="@drawable/button_shape_a"
               android:text="8"/>            
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_zero"
              android:background="@drawable/button_shape_a"
               android:text="0"/> 
        </LinearLayout>
         <LinearLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical" 
          android:layout_weight="1" >
          <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_three"
               android:background="@drawable/button_shape_a"
                android:text="3"/>
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_six"
              android:background="@drawable/button_shape_a"
               android:text="6"/>              
             <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_nine"
              android:background="@drawable/button_shape_a"
               android:text="9"/>            
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_spot"
              android:background="@drawable/button_shape_a"
               android:text="."/>
        </LinearLayout>
         <LinearLayout 
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical" 
          android:layout_weight="1" >
          <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
             android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:id="@+id/btn_del"
              android:text="del"
               android:background="@drawable/button_shape_a"/>
                <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="1" 
              android:text="+"
              android:id="@+id/btn_add"
               android:background="@drawable/button_shape_a"/>
          
              <Button 
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:gravity="center"
              android:textSize="23.0sp"
              android:textColor="@color/black"
              android:layout_weight="2" 
              android:id="@+id/btn_ok"
               android:background="@drawable/button_shape_a"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout> 
   </LinearLayout>
</LinearLayout>
